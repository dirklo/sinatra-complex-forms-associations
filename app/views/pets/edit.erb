<h1>Update Pet</h1>


<form action="/pets/<%= @pet.id%>" method="POST">
    <input type="hidden" id="hidden" name="_method" value="PATCH">

    <label for="pet_name">Pet Name:</label>    
    <input type="text" id="pet_name" name="pet[name]"value="<%= @pet.name %>">

    <h2>Existing Owners</h2>
    <% @owners.each do |owner| %>
        <input type="radio" name="owner[name]" id="<%= owner.id %>" value="<%= owner.name %>" <%='checked' if @pet.owner == owner %>><%= owner.name %></input></br>
    <% end %>

    <h2>New Owner</h2>
    <label for="owner_name"></label>
    <input type="text" name="owner_name" id="owner_name">

    <input type="submit" value="Update Pet">
</form>